
@model CDN_MVC.Models.UserViewModel

@{
    ViewData["Title"] = "DeleteConfirmed";
}

<div class="container mt-4">
    <h1>Delete Confirmation</h1>

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Are you sure you want to delete?</h3>
            <div class="card-text">
                <h4>User Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">User ID:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>

                    <dt class="col-sm-2">Username:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Username)</dd>

                    <dt class="col-sm-2">Mail:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Mail)</dd>

                    <dt class="col-sm-2">Phone Number:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                    <dt class="col-sm-2">Skillsets:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Skillsets)</dd>

                    <dt class="col-sm-2">Hobby:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Hobby)</dd>
                </dl>
            </div>

            <form asp-action="Delete">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
