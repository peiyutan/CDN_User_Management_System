@model CDN_MVC.Models.UserViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User Details</h1>
<hr />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Id" class="control-label">User ID:</label>
                    <input asp-for="Id" class="form-control" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <label asp-for="Username" class="control-label">Username:</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <label asp-for="Mail" class="control-label">Mail:</label>
                    <input asp-for="Mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <label asp-for="PhoneNumber" class="control-label">Phone Number:</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <label asp-for="Skillsets" class="control-label">Skillsets:</label>
                    <input asp-for="Skillsets" class="form-control" />
                    <span asp-validation-for="Skillsets" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <label asp-for="Hobby" class="control-label">Hobby:</label>
                    <input asp-for="Hobby" class="form-control" />
                    <span asp-validation-for="Hobby" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
